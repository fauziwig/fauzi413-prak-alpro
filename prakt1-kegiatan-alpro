//studi kasus - 1

#include <iostream>
#include <fstream>
using namespace std;
main(){

string ulangi ;
int ag,ab;
double pil, bayar,total,bayar_a, bayar_b, total_s ;
ifstream myfile1;
ofstream myfile("struk1.txt");
cout<<"Menu \n 1. Ayam Goreng = Rp17000\n 2. Ayam Bakar = Rp21.000\n 3. Struk biaya"<<endl;

do {
cout<<"masukkan pilihan : "; cin>>pil; 
if(pil==1){
	cout<<"masukkan jumlah ayam goreng : "; cin>>ag;
	bayar_a = ag * 17000; 
	cout<<"harga = "<<bayar_a<<endl;
}else if(pil==2){
	cout<<"masukkan jumlah ayam bakar : "; cin>>ab;
	bayar_b = ab * 21000;
	cout<<"harga = "<<bayar_b<<endl;
}else if(pil==3){
	return 0; 
}
cout<<"mau beli apa lagi? : "; cin>>ulangi;
}
while (ulangi=="y");

total = bayar_a + bayar_b ;
cout<<endl<<endl;
cout<<"total harga makanan semua = "<<total<<endl;

if(total>45000){
	cout<<"selamat anda dapat diskon 10%"<<endl;
	total_s = total - (total * 0.1);
}else
{
	total_s = total ;
}

myfile <<"total yang harus dibayar = "<<total_s<<endl;

myfile.close();

	
}
